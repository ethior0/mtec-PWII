<link rel="stylesheet" href="css/views_css/login.css">

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" id="modal-button" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
  Launch static backdrop modal
</button>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">Aviso!</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <a type="button" class="btn-form" href="/">Voltar</a>
      </div>
    </div>
  </div>
</div>

<div class="container-login">
  <div class="cadastro-img">
    <img src="img/vetor03-lq.png">
  </div>

  <div class="login">
    <a href="/">
      <img src="img/logo/logo-completa.png">
    </a>

    <div class="cadastro-body">
      <div class="login-body-info">
        <svg xmlns="http://www.w3.org/2000/svg" width="2.5rem" height="2.5rem" viewBox="0 0 24 24"><path fill="#309279" d="M12 4a4 4 0 0 1 4 4a4 4 0 0 1-4 4a4 4 0 0 1-4-4a4 4 0 0 1 4-4m0 10c4.42 0 8 1.79 8 4v2H4v-2c0-2.21 3.58-4 8-4"/></svg>
        <h2>Criar conta!</h2>
      </div>

      <form action="/" method="post" class="formulario-cadastro">
        <!-- Inputs 1 -->
        <div class="inputs-1">
          <label for="cadastro-email">
            <svg xmlns="http://www.w3.org/2000/svg" width="1.2rem" height="1.2rem" viewBox="0 0 24 24"><path fill="#8B8B8B" d="M22 6c0-1.1-.9-2-2-2H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2zm-2 0l-8 5l-8-5zm0 12H4V8l8 5l8-5z"/></svg>
            E-mail:
          </label>
          <input type="email" id="cadastro-email" placeholder="Ex.: emailtop@outlook.com">

          <label for="cadastro-senha">
            <svg xmlns="http://www.w3.org/2000/svg" width="1.2rem" height="1.2rem" viewBox="0 0 32 32"><path fill="#8B8B8B" d="M21 2a8.998 8.998 0 0 0-8.612 11.612L2 24v6h6l10.388-10.388A9 9 0 1 0 21 2m0 16a7 7 0 0 1-2.032-.302l-1.147-.348l-.847.847l-3.181 3.181L12.414 20L11 21.414l1.379 1.379l-1.586 1.586L9.414 23L8 24.414l1.379 1.379L7.172 28H4v-3.172l9.802-9.802l.848-.847l-.348-1.147A7 7 0 1 1 21 18"/><circle cx="22" cy="10" r="2" fill="#8B8B8B"/></svg>
            Senha:
          </label>
          <input type="password" id="cadastro-senha" placeholder="Crie uma senha">

          <label for="cadastro-repete-senha">
            <svg xmlns="http://www.w3.org/2000/svg" width="1.2rem" height="1.2rem" viewBox="0 0 32 32"><path fill="#8B8B8B" d="M21 2a8.998 8.998 0 0 0-8.612 11.612L2 24v6h6l10.388-10.388A9 9 0 1 0 21 2m0 16a7 7 0 0 1-2.032-.302l-1.147-.348l-.847.847l-3.181 3.181L12.414 20L11 21.414l1.379 1.379l-1.586 1.586L9.414 23L8 24.414l1.379 1.379L7.172 28H4v-3.172l9.802-9.802l.848-.847l-.348-1.147A7 7 0 1 1 21 18"/><circle cx="22" cy="10" r="2" fill="#8B8B8B"/></svg>
            Confirmar Senha:
          </label>
          <input type="password" id="cadastro-repete-senha" placeholder="Confirme sua senha">
        </div>

        <!-- Inputs 2 -->
        <div class="inputs-2 hidden">
          <label for="cadastro-nome">
            <svg xmlns="http://www.w3.org/2000/svg" width="1.2rem" height="1.2rem" viewBox="0 0 24 24"><path fill="#8B8B8B" d="M12 4a4 4 0 0 1 4 4a4 4 0 0 1-4 4a4 4 0 0 1-4-4a4 4 0 0 1 4-4m0 10c4.42 0 8 1.79 8 4v2H4v-2c0-2.21 3.58-4 8-4"/></svg>
            Nome de usuário:
          </label>
          <input type="text" id="cadastro-nome" placeholder="Ex.: Usuario Top">

          <label for="cadastro-tel">
            <svg xmlns="http://www.w3.org/2000/svg" width="1.2rem" height="1.2rem" viewBox="0 0 24 24"><path fill="none" stroke="#8B8B8B" stroke-dasharray="64" stroke-dashoffset="64" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.55" d="M8 3c0.5 0 2.5 4.5 2.5 5c0 1 -1.5 2 -2 3c-0.5 1 0.5 2 1.5 3c0.39 0.39 2 2 3 1.5c1 -0.5 2 -2 3 -2c0.5 0 5 2 5 2.5c0 2 -1.5 3.5 -3 4c-1.5 0.5 -2.5 0.5 -4.5 0c-2 -0.5 -3.5 -1 -6 -3.5c-2.5 -2.5 -3 -4 -3.5 -6c-0.5 -2 -0.5 -3 0 -4.5c0.5 -1.5 2 -3 4 -3Z"><animate fill="freeze" attributeName="stroke-dashoffset" dur="0.6s" values="64;0"/></path></svg>
            Telefone Celular:
          </label>
          <input type="tel" id="cadastro-tel" placeholder="Ex.: 11 98765-4321">

          <label for="cadastro-data-nasc">
            <svg xmlns="http://www.w3.org/2000/svg" width="1.2rem" height="1.2rem" viewBox="0 0 24 24"><g fill="none"><rect width="18" height="15" x="3" y="6" stroke="#8B8B8B" stroke-width="1.55" rx="2"/><path fill="#8B8B8B" d="M3 10c0-1.886 0-2.828.586-3.414S5.114 6 7 6h10c1.886 0 2.828 0 3.414.586S21 8.114 21 10z"/><path stroke="#8B8B8B" stroke-linecap="round" stroke-width="1.55" d="M7 3v3m10-3v3"/><rect width="4" height="2" x="7" y="12" fill="#8B8B8B" rx=".5"/><rect width="4" height="2" x="7" y="16" fill="#8B8B8B" rx=".5"/><rect width="4" height="2" x="13" y="12" fill="#8B8B8B" rx=".5"/><rect width="4" height="2" x="13" y="16" fill="#8B8B8B" rx=".5"/></g></svg>
            Data de nascimento:
          </label>
          <input type="date" id="cadastro-data-nasc" placeholder="Coloque sua data de nascimento">
        </div>

        <!-- Botões -->
        <button type="button" class="btn-form btn-proximo">
          Próximo
          <svg xmlns="http://www.w3.org/2000/svg" width="1rem" height="2rem" viewBox="0 0 12 24"><path fill="white" fill-rule="evenodd" d="M10.157 12.711L4.5 18.368l-1.414-1.414l4.95-4.95l-4.95-4.95L4.5 5.64l5.657 5.657a1 1 0 0 1 0 1.414"/></svg>
        </button>

        <button type="submit" class="btn-form btn-cadastro hidden">
          Cadastrar
          <svg xmlns="http://www.w3.org/2000/svg" width="1rem" height="2rem" viewBox="0 0 12 24"><path fill="white" fill-rule="evenodd" d="M10.157 12.711L4.5 18.368l-1.414-1.414l4.95-4.95l-4.95-4.95L4.5 5.64l5.657 5.657a1 1 0 0 1 0 1.414"/></svg>
        </button>
      </form>
    </div>

    <p class="p-conta">Já possui uma conta? <a class="btn-mudar-tela" href="login">Entre aqui!</a></p>
  </div>
</div>

<script type="module" src="cadastroUsuario.js"></script>